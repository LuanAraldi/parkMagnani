  <script>
  $(function(){

      // esconde avisos ponto 1
      $('#latitude-aviso-p1').hide();
      $('#longitude-aviso-p1').hide();
      // esconde avisos ponto 2
      $('#latitude-aviso-p2').hide();
      $('#longitude-aviso-p2').hide();
      // esconde aviso do preco
      $('#preco-aviso').hide();
      // esconde aviso do nome
      $('#nome-aviso').hide();

      // define mascara para longitude e latitude
      $.mask.definitions['~']='[-]?';
      $('#latitude-p1').mask("~999.99999");
      $('#longitude-p1').mask('~99.99999');

      $('#latitude-p2').mask("~999.99999");
      $('#longitude-p2').mask('~99.99999');

      // define mask para latitude
      $.mask.definitions['n'] = "[0-9]";
      $('#preco-minuto-estacionamento').mask('nn');

      /* faz tratamento no salvar
        para controlar o tamanho da latitude e longitude*/
      $('#salvar').on('click', function(evt){
        evt.preventDefault();
        if($('#nome-estacionamento').val().trim() !== '')
        {
          $('#nome-aviso').hide();
          if($('#preco-minuto-estacionamento').val().trim() !== '' || $('preco-minuto-estacionamento').val() > 0)
          {
            $('#preco-aviso').hide();
            if($('#longitude-p1').val() < -180 || $('#longitude').val() > 180)
            {
              $('#longitude-aviso-p1').hide();
              if($('#latitude-p1').val() < -90 || $('#latitude').val() > 90)
              {
                $('#latitude-aviso-p1').hide();
                if($('#longitude-p2').val() < -180 || $('#longitude').val() > 180)
                {
                  $('#longitude-aviso-p2').hide();
                  if($('#latitude-p2').val() < -90 || $('#latitude').val() > 90)
                  {
                    $('#latitude-aviso-p2').hide();

                    // executar ajax a partir daqui

                  }
                  else {
                    $('#latitude-aviso-p2').show();
                  }
                }
                else {
                  $('#longitude-aviso-p2').show();
                }
              }
              else {
                $('#latitude-aviso-p1').show();
              }
            }
            else {
              $('#longitude-aviso-p1').show();
            }
          }
          else {
            $('#preco-aviso').show();
          }
        }
        else {
          $('#nome-aviso').show();
        }
      });

  });
  </script>

